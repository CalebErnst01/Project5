<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Opener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money Converter"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/USDvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Opener"

        app:layout_constraintVertical_bias="0.25"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/conValueOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conversion A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/USDvalue"

        app:layout_constraintVertical_bias="0.15"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/conValueTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conversion B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conValueOne"

        app:layout_constraintVertical_bias="0.10"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/conValueThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conversion C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conValueTwo"

        app:layout_constraintVertical_bias="0.10"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize conversions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conValueThree" />

</androidx.constraintlayout.widget.ConstraintLayout>